        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-jsx": "^0.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.5.0",
        "jest-extended": "^3.2.4",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "typedoc": "^0.24.6",
        "typescript": "^5.0.4"
