        "lint": "eslint . --ext .ts",
        "docs": "typedoc",
        "prepublish": "npm run build"
    },
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
