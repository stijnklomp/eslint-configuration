{
    "name": "stijnklomp/package-template",
    "description": "REPLACE ME - Project template for creating an npm package",
    "version": "0.0.0",
    "author": "stijnklomp",
    "license": "MIT",
    "main": "build/index.js",
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:stijnklomp/package-template.git"
    },
    "files": [
        "build/**/*"
    ],
    "scripts": {
        "start": "node build/index.js",
        "build": "tsc",
        "clean": "rm -rf build",
